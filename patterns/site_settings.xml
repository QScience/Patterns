<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Settings</title>
    <description>Basic site settings</description>
    <author>Chris Bryant</author>
    <author_email>chris@graviteklabs.com></author_email>
    <version>0.1</version>
    <author_date>09.11.2008</author_date>
    <category>Settings</category>
    <core>5.x</core>      
  </info>
  <actions>
    
    <variables>
      <!-- clean urls -->
      <variable name="clean_url">true</variable>
      
      <variable name="date_default_timezone">-28800</variable>
      <variable name="configurable_timezones">1</variable>
	    
      <!-- date formats -->
      <variable name="date_format_short">m/d/Y - g:ia</variable>
      <variable name="date_format_medium">D, m/d/Y - g:ia</variable>
      <variable name="date_format_long">l, F j, Y - g:ia</variable>
	    
      <!--first day is sunday -->
      <variable name="date_first_day">0</variable>
	    
      <variable name="file_directory_path">@confpath@/files</variable>
      
      <!-- Common Node Settings -->
      <!-- Comments oldest first -->
      <variable name="comment_default_order">1</variable>
      <!-- Disable subject field -->
      <variable name="comment_subject_field">0</variable>
      <!-- Display RSS feeds using full node text -->
      <variable name="feed_item_length">fulltext</variable>

    </variables>
    
    <menu>
	    <parent>Primary Links</parent>
	    <title>Home</title>
	    <path>home</path>
	    <weight>-9</weight>
    </menu>

  </actions>
</pattern>
