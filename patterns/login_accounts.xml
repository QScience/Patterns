<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Login - Accounts</title>
    <description>This pattern sets up functionality for user login and account settings.</description>
    <author>Chris Bryant</author>
    <author_email>chris@graviteklabs.com></author_email>
    <version>0.1</version>
    <author_date>09.11.2008</author_date>
    <core>5.x</core>      
  </info>
  
  <!-- Enable required modules. -->
  <modules>
    <module>user</module>
  </modules>

  <actions>
    
    <!-- Setup Roles -->
    
    <role>administrator</role>

    <!-- User Accounts -->
    
    <user>
	    <name>administrator</name>
	    <password>securepassword</password>
	    <mail>email@domain.com</mail>
	    <roles>
		    <administrator />
	    </roles>
    </user>

    <menu>
	    <parent>Primary Links</parent>
	    <title>Dashboard</title>
	    <path>user/dashboard</path>
	    <weight>-8</weight>
    </menu>

    <menu>
	    <parent>Primary Links</parent>
	    <title>My Account</title>
	    <path>user</path>
	    <weight>8</weight>
    </menu>
    
  </actions>
</pattern>
