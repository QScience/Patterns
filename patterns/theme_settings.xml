<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Theme Settings</title>
    <description>Global theme settings</description>
  </info>
  <actions>
    <!-- Ensure required modules are installed -->
    <pattern>core_modules</pattern>
    
    <!-- Setup imagecache presets and actions -->
    <imagecache>
      <preset>
        <name>photo_thumb</name>
        <action>
          <type>scale</type>
          <width>80</width>
          <height>80</height>
	  <fit>outside</fit>
	</action>
      </preset>
      <preset>
        <name>media_photo_thumb</name>
        <action>
          <type>scale</type>
          <width>130</width>
          <height>130</height>
          <fit>outside</fit>
        </action>
        <action>
          <type>crop</type>
          <width>130</width>
          <height>130</height>
          <xoffset>center</xoffset>
          <yoffset>center</yoffset>
        </action>
      </preset>
      <preset>
        <name>media_photo_full</name>
        <action>
          <type>scale</type>
          <width>800</width>
          <height>700</height>
          <fit>outside</fit>
        </action>
      </preset>
    </imagecache>
    
    <!-- Setup image sizes just in case needed, but imagecache should be used instead -->
    <variables>
      <variable name="image_sizes">
        <_original>
          <label>Original</label>
          <width>0</width>
          <height>0</height>
          <link>1</link>
        </_original>
        <thumbnail>
          <label>thumbnail</label>
          <width>100</width>
          <height>100</height>
          <link>1</link>
        </thumbnail>
        <preview>
          <label>preview</label>
          <width>640</width>
          <height>640</height>
          <link>1</link>
        </preview>
        <small>
          <label>small</label>
          <width>240</width>
          <height>180</height>
          <link>1</link>
        </small>
        <medium>
          <label>medium</label>
          <width>500</width>
          <height>375</height>
          <link>1</link>
        </medium>
        <large>
          <label>large</label>
          <width>1024</width>
          <height>768</height>
          <link>1</link>
        </large>
      </variable>
    </variables>
  </actions>
</pattern>
