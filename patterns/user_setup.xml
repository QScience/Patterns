<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Users Setup</title>
    <description>User accounts</description>
  </info>
  <modules>
    <module>user</module>
  </modules>
  <actions>
    <!-- Create user roles -->
    <role>marketing</role>
    <role>administrator</role>
    
    <!-- User Accounts -->
    <user>
      <name>siteadmin</name>
      <password>patterns</password>
      <mail>info@mysite.com</mail>
      <roles>
        <administrator />
      </roles>
    </user>
    
    <!-- User Access Permissions -->
    <permissions role="administrator">
			<!-- auto_nodetitle -->
			<p>use PHP for title patterns</p>
			
			<!-- block -->
			<p>administer blocks</p>
			<p>use PHP for block visibility</p>
			<!-- comment -->
			<p>administer comments</p>
			<!-- filter -->
			<p>administer filters</p>
			<!-- flickr -->
			<p>administer flickr</p>
			<p>view all flickr photos</p>
			<p>view own flickr photos</p>
			<!-- forward -->
			<p>administer forward</p>
			<!-- image -->
			<p>create images</p>
			<p>edit own images</p>
			<p>view original images</p>
			<!-- imagecache -->
			<p>administer imagecache</p>
			<p>flush imagecache</p>
			<!-- menu -->
			<p>administer menu</p>
			<!-- node -->
			<p>administer content types</p>
			<p>administer nodes</p>
			<p>create link content</p>
			<p>create page content</p>
			<p>create story content</p>
			<p>edit link content</p>
			<p>edit own link content</p>
			<p>edit own page content</p>
			<p>edit own story content</p>
			<p>edit page content</p>
			<p>edit story content</p>
			<p>revert revisions</p>
			<p>view revisions</p>
			<!-- panels -->
			<p>access all panels</p>
			<p>create panels</p>
			<!-- path -->
			<p>administer url aliases</p>
			<p>create url aliases</p>
			<!-- pathauto -->
			<p>administer pathauto</p>
			<!-- poll -->
			<p>create polls</p>
			<!-- simplemenu -->
			<p>administer simplemenu</p>
			<p>view simplemenu</p>
			<!-- system -->
			<p>access administration pages</p>
			<p>administer site configuration</p>
			<p>select different theme</p>
			<!-- taxonomy -->
			<p>administer taxonomy</p>
			<!-- tinymce -->
			<p>access tinymce</p>
			<p>administer tinymce</p>
			<!-- user -->
			<p>administer access control</p>
			<p>administer users</p>
			<!-- views_ui -->
			<p>administer views</p>
    </permissions>
    
    <permissions role="marketing">
			<!-- comment -->
			<p>administer comments</p>
			<!-- forward -->
			<p>administer forward</p>
			<!-- image -->
			<p>create images</p>
			<p>edit own images</p>
			<p>view original images</p>
			<!-- menu -->
			<p>administer menu</p>
			<!-- node -->
			<p>administer nodes</p>
			<p>create link content</p>
			<p>create page content</p>
			<p>create story content</p>
			<p>edit link content</p>
			<p>edit own link content</p>
			<p>edit own page content</p>
			<p>edit own story content</p>
			<p>edit page content</p>
			<p>edit story content</p>
			<p>revert revisions</p>
			<p>view revisions</p>
			<!-- poll -->
			<p>create polls</p>
			<!-- user -->
			<p>administer users</p>
    </permissions>
    
    <permissions role="authenticated user">
			<!-- buddylist -->
			<p>maintain buddy list</p>
			<p>view buddy lists</p>
			<!-- comment -->
			<p>access comments</p>
			<p>post comments</p>
			<p>post comments without approval</p>
			<!-- forward -->
			<p>access forward</p>
			<!-- node -->
			<p>access content</p>		
			<!-- poll -->
			<p>cancel own vote</p>
			<p>inspect all votes</p>
			<p>vote on polls</p>		
			<!-- user -->
			<p>access user profiles</p>
			<p>change own username</p>
    </permissions>
  </actions>
</pattern>
