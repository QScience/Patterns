<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Views</title>
    <description>Common views</description>
  </info>
  <modules>
    <module>views</module>
    <module>views_rss</module>
    <module>views_ui</module>
    <module>calendar</module>
  </modules>
  <actions>
    <!-- Make sure content types pattern has run -->
    <pattern>content_setup</pattern>
    
    <!-- Make sure theme settings view has run for imagecache presets -->
    <pattern>theme_settings</pattern>
    
    <!-- General news view -->
  <view>
      <name>news</name>
      <description>General News</description>
      <page>
        <enabled>1</enabled>
        <url>news</url>
        <title>News</title>
        <type>teaser</type>
        <numnodes>25</numnodes>
        <pager>true</pager>
        <empty>There are currently no news items.</empty>
      </page>
      <menu>
        <title>News</title>
      </menu>
      <block>
        <enabled>1</enabled>
        <title>General News</title>
        <type>teaser</type>
        <numnodes>5</numnodes>
        <more>true</more>
      </block>
      <filter>
        <type>node.type</type>
        <operator>OR</operator>
        <value>
          <type>news</type>
        </value>
      </filter>
      <filter>
        <type>node.status</type>
        <operator>=</operator>
        <value>1</value>
      </filter>
      <sort>
        <type>node.created</type>
        <value>descending</value>
      </sort>
    </view>
		
    <!-- Recent blogs view -->
    <view>
      <name>recent_blogs</name>
      <description>Recent Blog Posts</description>
      <block>
        <enabled>1</enabled>
        <title>Recent Blog Posts</title>
        <type>teaser</type>
        <numnodes>6</numnodes>
        <more>true</more>
        <empty>There are currently no blog posts.</empty>
      </block>
      <filter>
        <type>node.type</type>
        <operator>OR</operator>
        <value>
          <type>blog</type>
        </value>
      </filter>
      <filter>
        <type>node.status</type>
        <operator>=</operator>
        <value>1</value>
      </filter>
      <sort>
        <type>node.created</type>
        <value>descending</value>
      </sort>
    </view>
		
    <!-- Photos view -->
    <view>
      <name>photos</name>
      <description>Image Galleries</description>
      <block>
        <enabled>1</enabled>
        <title>Photos</title>
        <type>list</type>
        <numnodes>12</numnodes>
        <more>true</more>
        <empty>There are currently no Photos.</empty>
      </block>
      <field>
        <id>node.title</id>
      </field>
      <field>
        <id>node_data_field_image.field_image_fid</id>
      </field>
      <filter>
        <type>node.type</type>
        <operator>OR</operator>
        <value>
          <type>image</type>
        </value>
      </filter>
      <filter>
        <type>node.status</type>
        <operator>=</operator>
        <value>1</value>
      </filter>
      <sort>
        <type>node.created</type>
        <value>descending</value>
      </sort>
    </view>
		
  </actions>
</pattern>
