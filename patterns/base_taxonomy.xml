<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Taxonomy</title>
    <description>Common taxonomies</description>
  </info>
  <!-- Ensure required modules are installed -->
  <modules>
    <module>taxonomy</module>
  </modules>
  <actions>
    <!-- Downloadable Item Vocabulary -->
    <vocabulary>
      <name>Download Items</name>
      <hierarchy>0</hierarchy> <!-- No Hierarchy -->
      <nodes>
        <image />
      </nodes>
    </vocabulary>

    <!-- Download Item Categories -->
    <term vocabulary="Download Items">Avatar</term>
    <term vocabulary="Download Items">Banner</term>
    <term vocabulary="Download Items">Wallpaper</term>
  </actions>
</pattern>
