<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Menu</title>
    <description>Standard menu configurations</description>
  </info>
  <modules>
    <module>menu</module>
  </modules>
  <actions>
    <!-- The position of this action is important for the simplemenu variable at the bottom since the MID is saved for this action -->
    <menu>
      <title>Administer</title>
    </menu>

    <!-- Create a HOME menu item in primary links -->
    <menu>
      <parent>Primary links</parent>
      <title>Home</title>
      <path>home</path> <!-- Add content menu item -->
      <weight>0</weight>
    </menu>

    <!-- Create a BLOG menu item in primary links -->
    <menu>
      <parent>Primary links</parent>
      <title>Blogs</title>
      <path>blogs</path>
       <weight>3</weight>
    </menu>

    <!-- Create a CONTACT menu item in primary links -->
    <menu>
      <parent>Primary links</parent>
      <path>contact</path>
      <title>Contact us</title>
      <weight>4</weight>
    </menu>

    <!-- Change weight of the Create Content menu item (identified via path=node/add) to -10 -->
    <menu>
      <parent>Administer</parent>
      <path>node/add</path>
      <weight>-10</weight>
    </menu>

    <!-- Change title from Content management to Content Management and set weight to -9 -->
    <menu>
      <parent>Administer</parent>
      <title>Content Management</title>
      <path>admin/content</path>
      <weight>-9</weight>
    </menu>

    <!-- Change title from Site building to Site Building and set weight to -8 -->
    <menu>
      <parent>Administer</parent>
      <title>Site Building</title>
      <path>admin/build</path>
      <weight>-8</weight>
    </menu>
		
    <!-- Set simplemenu to the newly created Administer menu -->
    <variable name="simplemenu_menu">@1@</variable>
  </actions>
</pattern>
