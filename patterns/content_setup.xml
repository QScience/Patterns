<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Content Setup</title>
    <description>Basic content types and settings</description>
  </info>
  <actions>
    <!-- Ensure required modules are installed -->
    <pattern>core_modules</pattern>
 
    <!-- Ensure necessary site settings have been set (file path) -->
    <pattern>site_settings</pattern>
    
    <!-- Ensure necessary theme settings have been set (imagecache) -->
    <pattern>theme_settings</pattern>
		
		<!-- Common Node Settings -->
    <variables>
      <!-- Comments oldest first -->
      <variable name="comment_default_order">1</variable>
      <!-- Disable subject field -->
      <variable name="comment_subject_field">0</variable>
      <!-- Display RSS feeds using full node text -->
      <variable name="feed_item_length">fulltext</variable>
    </variables>
    
	  <!-- Create News -->
	  <content>
		  <name>News</name>
		  <type>news</type>
	  </content>
	  
	  <!-- Make Blog not publish to front page -->
	  <content>
		  <type>blog</type>
		  <promote>false</promote>
	  </content>
	  
	  <!-- Changes to Poll content type -->
	  <content>
		  <type>poll</type>
		  <promote>false</promote>
		  <comment>0</comment>
		  <upload>0</upload>
	  </content>
	  
	  <!-- Image type and fields -->
	  <content>
	    <name>Image</name>
	    <type>image</type>
	    <description>Images &amp; Photos for Media section.</description>
	    <promote>false</promote>
	    <comment>0</comment>
	    <upload>0</upload>
	    <fivestar>0</fivestar>
	  </content>
		<field>
		  <type>image</type>
		  <name>image</name>
		  <label>Image</label>
		  <widget>image</widget>
		  <option>image</option>
		  <image_path>images/general</image_path>
		  <custom_alt>1</custom_alt>
		  <custom_title>1</custom_title>
		  <required>1</required>
		  <multiple>1</multiple>
		</field>
		<display>
		  <type>image</type>
		  <field>image</field>
		  <label>hidden</label>
		  <teaser>photo_thumb_linked</teaser>
		  <full>photo_thumb_linked</full>
		</display>
		
		<!-- Album Tracks -->
	  <content>
	    <name>Track</name>
	    <type>track</type>
	    <description>General Music Track</description>
	    <promote>true</promote>
	    <comment>2</comment>
	    <upload>1</upload>
	  </content>
	  <group>
	    <type>track</type>
	    <name>lyrics</name>
	    <label>Lyrics</label>
	    <form>
	    	<style>fieldset_collapsible</style>
	    </form>
	  </group>
	  <group>
	    <type>track</type>
	    <name>track_information</name>
	    <label>Track Information</label>
	    <form>
	    	<style>fieldset_collapsible</style>
	    </form>
	  </group>
		<field>
		  <type>track</type>
		  <name>track_lyrics</name>
		  <label>Track Lyrics</label>
		  <widget>text</widget>
		  <option>text</option>
		  <rows>12</rows>
		  <group>lyrics</group>
		  <text_processing>1</text_processing>
		</field>
		<field>
		  <type>track</type>
		  <name>track_lyrics_ma</name>
		  <label>MA</label>
		  <description>Check this box if these lyrics have "mature" content and should be labeled "MA".</description>
		  <widget>options_onoff</widget>
		  <option>number_integer</option>
		  <group>lyrics</group>
		</field>
		<field>
		  <type>track</type>
		  <name>track_length</name>
		  <label>Length</label>
		  <description>The length of the track. Enter: 3:42 for 3 minutes and 42 seconds.</description>
		  <widget>text</widget>
		  <option>text</option>
		  <rows>1</rows>
		  <group>track_information</group>
		</field>
		<field>
		  <type>track</type>
		  <name>track_number</name>
		  <label>Number</label>
		  <widget>number</widget>
		  <option>number_integer</option>
		  <group>track_information</group>
		</field>
		
		<!-- Albums -->
	  <content>
	    <name>Album</name>
	    <type>album</type>
	    <description>A band/artist's album or record</description>
	    <promote>true</promote>
	    <comment>2</comment>
	    <upload>1</upload>
	  </content>
	  <group>
	    <type>album</type>
	    <name>album_information</name>
	    <label>Album Information</label>
	    <form>
		    <style>fieldset_collapsible</style>
		    <description>Detailed Information about the Album</description>
	    </form>
	  </group>
	  <group>
	    <type>album</type>
	    <name>album_tracks</name>
	    <label>Album Tracks</label>
	    <form>
	      <style>fieldset_collapsible</style>
	      <description></description>
	    </form>
	  </group>
		<field>
		  <type>album</type>
		  <name>album_cover</name>
		  <label>Cover</label>
		  <widget>image</widget>
		  <option>image</option>
		  <image_path>images/covers</image_path>
		  <custom_alt>1</custom_alt>
		  <custom_title>1</custom_title>
		  <required>1</required>
		  <multiple>1</multiple>
		</field>
		<field>
		  <type>album</type>
		  <name>album_producer</name>
		  <label>Album Producer</label>
		  <widget>text</widget>
		  <option>text</option>
		  <group>album_information</group>
		  <rows>5</rows>
		</field>
		<field>
		  <type>album</type>
		  <name>album_summary</name>
		  <label>Album Summary</label>
		  <widget>text</widget>
		  <option>text</option>
		  <group>album_summary</group>
		  <rows>8</rows>
		</field>
		<field>
		  <type>album</type>
		  <name>album_date</name>
		  <label>Date</label>
		  <widget>date_select</widget>
		  <option>date</option>
		  <group>album_information</group>
		  <granularity><Y>Y</Y><M>M</M><D>D</D></granularity>
		  <tz_handling>none</tz_handling>
		</field>
		<field>
		  <type>album</type>
		  <name>album_track</name>
		  <label>Album Tracks</label>
		  <widget>nodereference_select</widget>
		  <option>nodereference</option>
		  <group>album_tracks</group>
		  <required>true</required>
		  <multiple>true</multiple>
		  <referenceable_types>
		    <story />
		  </referenceable_types>
		</field>
		
		<!-- Tour/Shows -->
		<content>
		  <name>Show</name>
		  <type>show</type>
		  <description>A show is a tour date, gig, or appearance at an event.</description>
		  <title>Title</title>
		  <body />
		  <promote>false</promote>
		  <comments>2</comments> <!-- Read/Write -->
		  <upload>false</upload>
		</content>
		<field>
		  <type>show</type>
		  <name>showdate</name>
		  <label>Show Date</label>
		  <widget>date_select</widget>
		  <option>date</option>
		  <required>true</required>
			<granularity><Y>Y</Y><M>M</M><D>D</D></granularity>
			<tz_handling>none</tz_handling>
			<weight>-4</weight>
		</field>
		<field>
		  <type>show</type>
		  <name>venue</name>
		  <label>Venue</label>
		  <widget>text</widget>
		  <option>text</option>
		</field>
		<field>
		  <type>show</type>
		  <name>venue_link</name>
		  <label>Venue Url</label>
		  <widget>link</widget>
		  <option>link</option>
		</field>
		<field>
		  <type>show</type>
		  <name>location</name>
		  <label>Location</label>
		  <widget>text</widget>
		  <option>text</option>
		  <required>true</required>
		</field>
		<field>
		  <type>show</type>
		  <name>buy_link</name>
		  <label>Buy Link</label>
		  <widget>link</widget>
		  <option>link</option>
		</field>
		<field>
		  <type>show</type>
		  <name>notes</name>
		  <label>Notes</label>
		  <widget>text</widget>
		  <option>text</option>
		</field>
		
		<!-- Downloadable Content -->
		<content>
		  <name>Download Item</name>
		  <type>download_item</type>
		  <description>A Download Item is an image categorized by taxonomy.  These include banners, buddy icons, avatars, wallpapers, etc.</description>
		  <title>Name</title>
		  <body>Description</body>
		  <promote>false</promote>
		  <comments>0</comments> <!-- None -->
		  <upload>false</upload>	  
		</content>
	  <field>
		  <type>download_item</type>
		  <name>image</name>
		  <label>Download Item Image</label>
		  <widget>image</widget>
		  <option>image</option>
		  <help>Upload the download_item image.  Max resolution is 250x250.</help>
		  <comments>2</comments>
		  <upload>true</upload>
	    <max_resolution>250x250</max_resolution>
	    <image_path>images/downloads</image_path>
		  <required />
		</field>
		<field>
		  <type>download_item</type>
		  <name>section</name>
		  <label>Section</label>
		  <widget>text</widget>
		  <option>text</option>
		</field>
	  
  </actions>
</pattern>
