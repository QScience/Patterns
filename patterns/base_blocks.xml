<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
		<title>Blocks</title>
		<description>Standard block setups</description>
  </info>
  <modules>
    <module>block</module>
    <module>user</module>
    <module>dhtml_menu</module>
    <module>poll</module>
  </modules>
  <actions>
    
    <!-- Bring login block to the bottom -->
    <block id="user-0">
      <weight>-10</weight>
    </block>
    
    <!-- Disable default nav block -->
    <block id="user-1">
      <status>0</status>
    </block>
    
    <!-- Enable DHTML menu block -->
    <block id="dhtml_menu-1">
      <theme>garland</theme>
      <status>1</status>
      <weight>-9</weight>
      <region>left</region>
    </block>
    
    <!-- Put most recent poll in the right sidebar -->
    <block id="poll-0">
      <status>1</status>
      <region>right</region>
      <weight>-9</weight>
    </block>
  </actions>
</pattern>
